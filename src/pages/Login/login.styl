@import '../../styl/color.styl'

.header 
    width: 100vw
    // height 0.1rem
    height: 0.8rem
    background: $back1
    span 
      line-height: 0.8rem
      color: $fc1
      float :left
      font-size: 0.4rem
    h3
        text-align: center
        color: $fc1
        line-height: 0.8rem
        font-size: 0.32rem
        display: inline-block
        padding-left: 40%
input 
  width 80%
  height 0.8rem
  border: 0rem
.user
    background: $fc1
    width: 90%
    margin-top: 0.4rem
    margin-left: 0.3rem
    border:0.01rem $back2
    border-radius: 0.02rem
    .tel
        font-size: 0.4rem
        color: $back2
.pass
    background: $fc1
    width: 90%
    margin-left: 0.3rem
    border:0.01rem $back2
    border-radius: 0.02rem
    .pas
        color: $back1
        font-size: 0.4rem
.btn
    margin-top: 0.5rem
    margin-left: 0.6rem
    height 0.32rem
    font-size: 0.32rem
    line-height: 0.6rem
  button 
      background: $back1
      color: $fc1
      border: 0rem
      width: 90%
      height 0.6rem
.reg
    a 
     text-align: center 
     margin-top: 1.2rem 
     color: $fc3
     display: block
.or
  display: flex
  justify-content: space-between
  padding-top: 0.8rem
  p
   line-height: .15rem
.line
       height: 0.01rem
       width: 40%
       background: $fc4
.fast
    p
      text-align: center 
      margin-top: 1rem 
      color: $fc3
.other
    padding-top: 1rem
    display: flex
    justify-content: space-around
    div
       background: $fc1  
       width: 1.2rem
       height: 1.2rem
       border-radius: 50%
       text-align: center
       span 
          font-size: 0.5rem
          text-align: center
          line-height: 1.2rem
    